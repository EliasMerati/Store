@{
    ViewData["Title"] = "ثبت نام کاربر جدید";
}

<form method="post">
    <div class="row">
        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
            <div class="form-group">
                <label>نام و نام خانوادگی</label>
                <input type="text" class="form-control">
            </div>
        </div>

        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
            <div class="form-group">
                <label>ایمیل</label>
                <input type="email" class="form-control">
            </div>
        </div>

        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
            <div class="form-group">
                <label>نقش </label>
                <select class="form-control" name="Role" id ="Role" asp-items="@ViewBag.roles">

                </select>
            </div>
        </div>

        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
            <div class="form-group">
                <label>رمز عبور</label>
                <input type="text" class="form-control">
            </div>
        </div>

        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
            <div class="form-group">
                <label>تکرار رمز عبور</label>
                <input type="text" class="form-control">
            </div>
        </div>
        <button type="submit" class="btn  btn-success btn-lg btn-block"> ثبت مشخصات کاربر</button>
    </div>
</form>

